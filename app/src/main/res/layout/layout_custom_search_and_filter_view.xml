<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/search_state_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/search_back_btn"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:background="?colorPrimary"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:tint="@color/white" />

        <EditText
            android:id="@+id/search_search_edt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/search_hint"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <ImageButton
            android:id="@+id/search_remove_btn"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:background="?colorPrimary"

            android:src="@drawable/ic_baseline_close_24"
            android:tint="@color/white"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/default_state_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/default_title_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/default_search_btn"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:background="?colorPrimary"
            android:src="@drawable/ic_search_black_24dp"
            android:tint="@color/white" />


        <ImageButton
            android:id="@+id/default_filter_btn"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:background="?colorPrimary"
            android:src="@drawable/ic_round_filter_list_24"
            android:tint="@color/white" />

    </LinearLayout>
</FrameLayout>